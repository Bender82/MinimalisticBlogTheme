{{!< default}}

        <div class="container clearfix">
          <main role="main" class="content">
              <div class="tag-title">
                <p>All articles tagged as:</p>
                <h1>{{tag.name}}</h1>
              </div>

              {{#foreach posts}}  
              <article class="{{post_class}} post">
                <h2><a href="{{url}}" title="{{title}}">{{title}}</a></h2>
                <footer class="post-info">Publi%C3%A9 le <span class="post-meta"><time datetime="{{date published_at format="DD-MM-YYYY"}}">{{date published_at format="Do MMMM YYYY"}}</time> {{tags separator=", " prefix="Tagged in "}}</span></footer>
                
                <p>{{excerpt characters="600"}}&hellip;</p>
                
                <a href="{{url}}" title="{{title}}">Plus &raquo;</a>
              </article>
              {{/foreach}}

              {{pagination}}
             
          </main>
          <aside class="author">
            <a class="btn" href="{{@blog.url}}" title="Accueil">&laquo; Accueil</a>
            <img class="profile-image" src="{{asset "img/profile-image.jpg"}}" alt="" />
            <p class="name">by <strong>Romain Nicault</strong></p>
            <p class="address">Paris, France</p>
            <p class="link"><a href="http://romain.nicault.fr" title="Romain Nicault">romain.nicault.fr</a></p>

            <ul class="social">
              <li><a class="icon-twitter" href="http://twitter.com/RomainNicault" title="Twitter"></a></li>
              <li><a class="icon-linkedin" href="http://www.linkedin.com/in/rnicault" title="Linkedin"></a></li>
            </ul>

          </aside>
        </div>
